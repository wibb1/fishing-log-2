<section class="hero">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">New Record</h1>
    </div>
  </div>
</section>

<div class="section-indent m-md">
  <div class="container has-text-dark">
  <%= form_for(@record) do |f| %>
   
      <div class="field">
        <%= f.label :name, :class => "label" %>
        <div class="control">
          <%= f.text_field :name, placeholder: "Spot Name", :class => "input", :required => true %>
        </div>
      </div>

      <div class="field">
        <%= f.label :success, "How was the fishing?", :class => "label" %>
        <div class="control">
          <div class="select">
            <%= f.select :success, ["Good", "Bad"], :prompt => "Select One", :required => true %>
          </div>
        </div>
      </div>

      <div class="field">
        <%= f.label :species, :class => "label" %>
        <div class="control">
          <div class="select">
            <%= f.select :species, @species_list, :prompt => "Select One", :required => true %>
          </div>
        </div>
      </div>

      <div class="field">
        <%= f.label :body, "Spot Description", :class => "label" %>
        <div class="control">
          <%= f.text_area :body, placeholder: "Description", :class => "textarea" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :latitude, :class => "label" %>
        <div class="control">
          <%= f.number_field :latitude, step: :any, placeholder: "Typically 41.3 to 41.8", :class => "input", :required => true %>
        </div>
      </div>

      <div class="field">
        <%= f.label :longitude, :class => "label" %>
        <div class="control">
          <%= f.number_field :longitude, step: :any, placeholder: "Typically -70 to -70.6", :class => "input", :required => true %>
        </div>
      </div>

      </div>
      <div class="field">
        <%= f.label :datetime, :class => "label" %>
        <div class="control">
          <%= f.datetime_select :datetime, max: Time.now(), :class=> "input", :required => true  %>
        </div>
      </div>

      <div class="field">
        <%= f.label :shared, :class => "label" %>
        <div class="control">
          <div class="select">
            <%= f.select :shared, ["Shared", "Private"], :prompt => "Select One", :required => true %>
          </div>
        </div>
      </div>

      <div class="field">
        <%= f.submit "Submit", :class =>"button is-primary has-text-weight-bold" %>
      </div>

    <% end %>

    
  </div>
</div>
